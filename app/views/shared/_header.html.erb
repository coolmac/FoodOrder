<div class="navbar navbar-default navbar-fixed-top" role="navigation">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand" href="/">Food Ordering System</a>
		</div>
		<div class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
				<li class="active"><%= link_to "Home", root_path %></li>
				<% if user_signed_in? %>
				<li> <%= link_to "MyOrders", orders_path %></li>
				<% end %>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<% if user_signed_in? %>
				<li class="dropdown">
					<%= link_to edit_user_registration_path, class: 'dropdown-toggle', data: { toggle: "dropdown" } do %>
					<%= current_user.email %><b class="caret"></b>
					<% end %>
					<ul class="dropdown-menu">
						<li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %></li>
					</ul>
				</li>
				<% else %>
				<li><%= link_to 'Sign In', new_user_session_path, class: :active %></li>
				<li><%= link_to 'Register', new_user_registration_path, class: :active %></li>
				<% end %>
			</ul>
		</div><!--/.nav-collapse -->
	</div>
